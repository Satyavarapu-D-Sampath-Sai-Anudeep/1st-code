#include <stdio.h>
void main() {
    int i,j,length,gap;
    printf("Please enter the lenght: ");
    scanf("%d",&length);
    for(i=1;i<=length;i++){
        for(gap=1;gap<=(length-i);gap++){
            printf(" ");
        }
        for(j=1;j<=i;j++){
            printf("A ");
        }
        printf("\n");
    }
}
